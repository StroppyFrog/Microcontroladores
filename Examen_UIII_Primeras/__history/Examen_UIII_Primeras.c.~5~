#include <16F877a.h>
#device ADC = 10
#use delay(crystal = 20000000)
#FUSES NOWDT, NOBROWNOUT, NOLVP, HS

#include <lcd_d.c>
#include <kbd4x4_b.c>

#define señal PIN_A0
#use standard_io(A)
 double carga = 0; 

#INT_TIMER1
void timer1_isr()
{
}

#INT_EXT
void ext_isr()
{
   pulsos++;
}

void main()
{
   // Inicializar pines
   lcd_init();
   kbd_init();

   enable_interrupts(GLOBAL);
   enable_interrupts(INT_RB);
   enable_interrupts(INT_EXT);
   while (TRUE)
   {
   }
}

